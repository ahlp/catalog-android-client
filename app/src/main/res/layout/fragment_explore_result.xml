<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hnka.csd.ExploreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="    Séries"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                tools:text="    Séries" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recySeriesList"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/activity_card_serie">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txtEpisodios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="    Episódios"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                tools:text="    Episódios" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyEpisodiosList"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/activity_card_ep">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txtUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="    Usuários"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                tools:text="    Usuários" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyUsuariosList"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/activity_card_user">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>